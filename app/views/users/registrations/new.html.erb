<div id="registrations">
  <div id="registrations-div">
    <h2 class="text-center">Crear cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "Nombre" %> <br>
        <%= f.text_field :name, class: "form-control my-2" %>
      </div>

      <div class="field">
        <%= f.label :rut %> <br>
        <%= f.text_field :rut, class: "form-control my-2" %>
      </div>

      <div class="field">
        <%= f.label :email, "Correo electrónico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-2" %>
      </div>

      <div class="field">
        <%= f.label :password, "Contraseña" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> letras mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control my-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmación de la contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control my-2" %>
      </div>

      <div class="actions my-3 text-center">
        <%= f.submit "Crear cuenta", class: "btn btn-light" %>
      </div>
    <% end %>

  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
    
  </div>
</div>


