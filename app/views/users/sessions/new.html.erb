<div id="sessions">
  <div class="text-center" id="sessions-div">
    <h2 class="text-center my-5">Ingresar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "Correo electrónico"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-3"%>
      </div>

      <div class="field">
        <%= f.label :password, "Contraseña" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control my-3" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions my-3">
        <%= f.submit "Ingresar", class: "btn btn-light" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>


